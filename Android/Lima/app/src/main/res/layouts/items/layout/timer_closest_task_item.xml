<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MW"
    android:padding="16dp">

    <TextView
        android:id="@+id/closest_task_title_text"
        style="@style/RobotoRegular.Black.Size14.Zero_W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Some task we need to complete or we are going to suffer" />

    <TextView
        android:id="@+id/closest_task_pomodoros_text"
        style="@style/RobotoRegular.Black.Size14.Zero_W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/closest_task_title_text"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="2/4p" />

</androidx.constraintlayout.widget.ConstraintLayout>
